<Window x:Class="CraftyEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CraftyEditor"
        mc:Ignorable="d"
        Title="MainWindow" Width="1400" Height="800" ResizeMode="NoResize" WindowStyle="None" Background="#FFFCFDFF">
    <Grid x:Name="main_grid">
        <DockPanel x:Name="menubar" HorizontalAlignment="Left" Height="56" LastChildFill="False" VerticalAlignment="Top" Width="1400" Background="#FF55A6D4">
            <Menu>
                <MenuItem x:Name="maps_menu" Header = "_Maps" Width="226" FontSize="24" Foreground="#FDFFFFFF" Background="#FF55A6D4" Click="MenuItem_Click"/>
                <MenuItem x:Name="tilesets_menu" Header = "_Tilesets" Height="56" Width="225" FontSize="24" Background="#FF55A6D4" Foreground="White" Click="MenuItem_Click_1" />
                <MenuItem x:Name="view_menu" Header = "_View" Height="56" Width="225" FontSize="24" Background="#FF55A6D4" Foreground="White" Click="MenuItem_Click_2" />
            </Menu>
        </DockPanel>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="56" Margin="674,0,0,0" Stroke="#00000000" VerticalAlignment="Top" Width="75"/>
        <Image x:Name="tile_preview" HorizontalAlignment="Left" Height="32" Margin="695,10,0,0" VerticalAlignment="Top" Width="34"/>
        <Grid x:Name="content" HorizontalAlignment="Left" Height="744" Margin="0,56,0,0" VerticalAlignment="Top" Width="1400">
            <GridSplitter x:Name="map_grid" HorizontalAlignment="Left" Height="744" Margin="448,0,0,0" VerticalAlignment="Top" Width="952" Background="#00F0F0F0"/>
            <Grid x:Name="data_grid" HorizontalAlignment="Left" Height="317" Margin="-94,784,0,-357" VerticalAlignment="Top" Width="443"/>
            <Grid x:Name="side_grid" HorizontalAlignment="Left" Height="755" Margin="0,-11,0,0" VerticalAlignment="Top" Width="443">
                <GridSplitter x:Name="tileset_splitter" HorizontalAlignment="Left" Height="380" Margin="0,10,0,0" VerticalAlignment="Top" Width="443"/>
                <GridSplitter x:Name="data_splitter" HorizontalAlignment="Left" Height="365" Margin="0,390,0,0" VerticalAlignment="Top" Width="443"/>
            </Grid>
        </Grid>
        <Rectangle x:Name="tileset_display" Fill="#FFF8F9FF" HorizontalAlignment="Left" Height="383" Margin="0,56,0,0" Stroke="#00000000" VerticalAlignment="Top" Width="441"/>
        <DataGrid x:Name="data_display" HorizontalAlignment="Left" Height="361" Margin="0,439,0,0" VerticalAlignment="Top" Width="441" RenderTransformOrigin="-0.911,0.894" BorderBrush="#00688CAF"/>
    </Grid>
</Window>
